{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Meteor: Chrome",
            "url": "http://localhost:3000",
            "cwd": "${workspaceFolder}/botfront",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/botfront",
            "name": "Meteor: Node",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ],
            "outputCapture": "std",
            "port": 9229,
            "timeout": 90000
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API compose",
            "program": "${workspaceFolder}/api/app.js",
            "console": "integratedTerminal",
            "env": {
                "MONGO_URL": "mongodb://localhost:27017/bf",
                "PORT": "8080",
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/api/node_modules/mocha/bin/_mocha",
            "env": {
                "NODE_ENV": "test",
                "MONGO_URL": "mongodb://dummy/for-monk",
                "PORT": "8082"
            },
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "./!(node_modules)/**/*.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug API",
            "program": "${workspaceFolder}/api/app.js",
            "console": "integratedTerminal",
            "env": {
                "MONGO_URL": "mongodb://localhost:3001/meteor",
                "PORT": "8080"
            }
        }
    ],
    "compounds": [
        {
            "name": "Meteor: All",
            "configurations": [
                "Meteor: Node",
                "Meteor: Chrome"
            ]
        },
        {
            "name": "Meteor: All Tests",
            "configurations": [
                "Meteor: Server Tests",
                "Meteor: Client Tests"
            ]
        }
    ]
}